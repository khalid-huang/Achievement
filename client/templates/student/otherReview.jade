template(name='otherReview')
	div
		ul.nav.nav-tabs(role="tablist")
			li(role="presentation")
				a(href="/studentReview/{{homeworkID}}") MyReview
			li(role="presentation")
				a(href="#") Other's
	div.tab-content
		div.tab-pane.active(role="tabpanel")
			div.review-header
				span.col-md-3.col-xs-3.col-lg-3.text-center
				span.col-md-6.col-xs-6.col-lg-6.text-center My Achievements
				span.col-md-3.col-xs-3.col-lg-3.text-center
					a(href="/") 返回
			each otherReviews
				if otherReviews.isTa
					div.other-review-body
						div.panel.panel-primary
							div.review-sign-ta
							div.other-review-comment
								p #{comment}
							div.other-review-score
								div.text-center.showscore #{score}
				else
					div.other-review-body
						div.panel.panel-success
							div.review-sign-others
							div.other-review-comment
								p #{comment}
							div.other-review-score
								div.text-center.showscore #{score}
